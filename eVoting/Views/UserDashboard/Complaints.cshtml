@model eVoting.OtherDBContextModel.UserComplaints

@{
    ViewBag.Title = "Complaints";
    Layout = "~/Views/Shared/_Home.cshtml";
}


<div class="panel">
    <div class="panel-heading" style="background-color:black;color:lightblue">
        <h2>Welcome to complaint Portal .Raise a complain here  </h2>
    </div>
    <div class="panel-body" style="background-color:lightgrey !important">
     

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ComplaintFor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ComplaintFor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ComplaintFor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Details,15,1000, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>


        }

        @if (ViewBag.valid == "Yes")
        {
            <div>
                <br />
                <div class="panel-body">
                    <span class="h3" style="color:green">
                        Sorry for inconvienence casued . Your complaint has been received. We will look into this matter.
                        <br />
                         Thank you very much !!
                    </span>
                </div>
                <br />
            </div>
        }
        @if (ViewBag.valid == "No")
        {
            <div>
                <br />
                <div class="panel-body">
                    <span class="h3" style="color:red">Please provide some logical idea</span>
                </div>
                <br />
            </div>
        }

        <div>
            @Html.ActionLink("Home", "Index", "Home")
        </div>

</div>
</div>