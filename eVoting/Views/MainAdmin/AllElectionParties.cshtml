@model IEnumerable<eVoting.OtherDBContextModel.ElectionParty>

@{
    ViewBag.Title = "All ElectionParties";
    Layout = "~/Views/Shared/_AreaAdminDashboard.cshtml";
}

<h2>All Election Parties</h2>

<div class="panel-heading" style="background-color:lightgreen;height:40px;width:200px">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>

<br />

<table class="table">
    <tr style="background-color:black;color:white">
        <th>
            @Html.DisplayNameFor(model => model.PartyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyHead)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyHeadOffice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyLogo)
        </th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyHead)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyHeadOffice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
     
                <td>
                    <img class="img-thumbnail" src="@String.Format("data:image/png;base64,{0}",Convert.ToBase64String(item.PartyLogo) )" height=150 width=150 />
                  
                </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { PartyId = item.PartyId })           
        </td>
    </tr>
}
}
else
{
    <tr>
        <td>
          There is no party has been created yet
        </td>
        </tr>
        }

</table>
