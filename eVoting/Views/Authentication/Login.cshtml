<div id="mainContent">
    <section class="container">

        <div class="innerContainer ">

            <div class="row">
                <div id="myWizard" class="formArea LRmargin">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div id="divMessage" class=" text-center col-md-4 col-sm-4 col-md-offset-4 alert alert-success">
                            @Html.ValidationSummary()
                        </div>
                        <div class="logo col-sm-12 text-center col-md-12 "> <img class="img-circle" alt="" src="~/Images/login.jpg" width="400" height="100" /></div>
                        <div class="col-md-4 col-md-offset-4 col-xs-12">
                            <div class="loginPage panel panel-info jumbotron">
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-user"></i> User</span>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.UserName)

                                </div>
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-lock"></i> Password</span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                </div>
                                
                                <div class="form-group">
                                    <input id="BtnLogin" type="submit" class="btn btn-success btn-pressure" name="BtnLogin" value="Login" />
                                    <input id="BtnReset" type="reset" class="btn btn-info btn-pressure" name="BtnReset" value="Reset" />
                                </div>

                               
                            </div>
                            
                        </div>
                    }

                    <div class="clear"></div>
                </div>
            </div>
        </div>

        <div class="innerContainer2">

            <div class="row">
                <div class="panel">
                    <div class="panel-heading">
                        <span class="h3" style="color:darkred">Instructions</span>
                        <div class="panel-body" style="color:red">
                            Please ensure that web camera is allowed in your computer or in your android device.While authenticating for electronic voting
                            we will verify by taking your recent picture and we will match your stored picture in our database.

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


